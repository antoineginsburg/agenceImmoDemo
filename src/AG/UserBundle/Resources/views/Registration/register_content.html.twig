{% trans_default_domain 'FOSUserBundle' %}
<div align="center">
	<h1>Inscription</h1>
</div >
<div class="well">
<br><br>
<form action="{{ path('fos_user_registration_register') }}"  method="POST" class="form-horizontal">
    {{ form_errors(form) }}

	<div class="form-group">
		{{ form_label(form.username, 'form.username'|trans , {'label_attr': {'class':'col-sm-3 control-label'}})}}
		<div class="col-sm-7">
			{{ form_widget(form.username, {'attr': {'class':'form-control'}}) }}
		</div>
		{{ form_errors(form.username) }}
	</div>

	<div class="form-group">
		{{ form_label(form.email, 'form.email'|trans, {'label_attr': {'class':'col-sm-3 control-label'}})}}
		<div class="col-sm-7">
			{{ form_widget(form.email, {'attr': {'class':'form-control'}}) }}
		</div>
		{{ form_errors(form.email) }}
	</div>

	<div class="form-group">
		{{ form_label(form.plainPassword.first, 'form.password'|trans, {'label_attr': {'class':'col-sm-3 control-label'}})}}
		<div class="col-sm-7">
			{{ form_widget(form.plainPassword.first, {'attr': {'class':'form-control'}}) }}
		</div>
		{{ form_errors(form.plainPassword.first) }}
	</div>
	
	<div class="form-group">
		{{ form_label(form.plainPassword.second, 'form.password_confirmation'|trans, {'label_attr': {'class':'col-sm-3 control-label'}})}}
		<div class="col-sm-7">
			{{ form_widget(form.plainPassword.second, {'attr': {'class':'form-control'}}) }}
		</div>
		{{ form_errors(form.plainPassword.second) }}
	</div>

    <div class="form-group">
		<div class="col-sm-offset-3 col-sm-7">
			<input type="submit" value="{{ 'registration.submit'|trans }}" />
		</div>
	</div>

	<br>
    <div class="form-group">
		<div class="col-sm-offset-3 col-sm-7">
			Vous êtes déjà inscrit ? Cliquez sur le lien suivant pour vous connecter : 	<a href="{{ path('fos_user_security_login')}}">connexion</a>
		</div>
	</div>

	{{form_rest(form)}}
	

	
</form>
<br><br>
</div>